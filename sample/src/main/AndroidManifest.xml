<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yanzhenjie.album.sample">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Application"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/Album.AppTheme">
        <activity android:name=".app.RealCameraActivity"></activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Album.AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.CameraActivity"
            android:label="@string/title_camera"
            android:screenOrientation="portrait"
            android:theme="@style/Album.AppTheme" />
        <activity
            android:name=".app.ImageActivity"
            android:label="@string/title_image_select"
            android:screenOrientation="portrait"
            android:theme="@style/Album.AppTheme" />
        <activity
            android:name=".app.VideoActivity"
            android:label="@string/title_video_select"
            android:screenOrientation="portrait"
            android:theme="@style/Album.AppTheme" />
        <activity
            android:name=".app.AlbumActivity"
            android:label="@string/title_album_select"
            android:screenOrientation="portrait"
            android:theme="@style/Album.AppTheme" />
        <activity
            android:name=".app.DefineStyleActivity"
            android:label="@string/title_album_select"
            android:screenOrientation="portrait"
            android:theme="@style/Album.AppTheme" />
        <activity
            android:name=".app.GalleryActivity"
            android:label="@string/title_gallery"
            android:screenOrientation="portrait"
            android:theme="@style/Album.AppTheme" />
        <activity
            android:name=".app.AlbumFilterActivity"
            android:label="@string/title_album_select"
            android:screenOrientation="portrait"
            android:theme="@style/Album.AppTheme" />
    </application>

</manifest>